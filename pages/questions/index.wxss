
.ques {
    position: relative;
    padding: 50rpx 60rpx 30rpx 60rpx;
    padding-bottom: 100rpx;
    background-color: #2f6be0;
    color: white;
    font-size: 40rpx;
}

.writer {
    display: flex;
    align-items:center;
    padding: 20rpx;
    position: absolute;
    bottom: -80rpx;
    left: 50rpx;
    width: 610rpx;
    background-color: white;
    border: 2px solid #cfcfcf;
}

.writer image {
    width: 100rpx;
    height: 100rpx;
    border-radius: 100%;
}

.writer .info {
    margin: 0 10rpx 0 20rpx;
    width: 380rpx;
    display: flex;
    flex-direction: column;
    color: black;
    font-size: 28rpx;
}

.writer .info view:last-child {
    font-size: 25rpx;
    color: rgb(165, 165, 165);
}

.writer button {
    margin: 0;
    padding: 0;
    width: 90rpx;
    height: 70rpx;
    font-size: 25rpx;
    line-height: 70rpx;
}

.answ {
    margin-top: 140rpx;
    padding: 0 50rpx;
    overflow: scroll;
}

.fixed {
    height: 180rpx;
}

view .van-grid {
    width: 750rpx;
    position: fixed;
    bottom: 0;
}